<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="noTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->

    </style>


    <!--FragmentActivity的样式，目前主要是用到ActionBar的地方-->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="FragmentActivityTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#FF666666</item>
    </style>
    <!--FragmentActivity的样式，目前主要是用到ActionBar的地方-->


    <style name="fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--text style-->
    <style name="text_title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize_title1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_title2">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize_content_label</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_item1">
        <item name="android:textSize">@dimen/textsize_content_label</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="text_item2">
        <item name="android:textSize">@dimen/textsize_content1</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!--以下是新版本定义的样式-->
    <style name="edtText_normal">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#c9c9c9</item>
    </style>

    <style name="textView_hint">
        <item name="android:textColor">#c9c9c9</item>
        <item name="android:textSize">@dimen/textsize_content1</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="view_split">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/activity_split</item>
    </style>

    <style name="image_label">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
